{
    "manifest_version": 3,
    "name": "Paste Image Uploader",
    "version": "1.1.0",
    "description": "Upload images directly from your clipboard",
    "action": {},
    "icons": {
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "permissions": [
      "clipboardRead"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["overlay.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
